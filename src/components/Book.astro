---
import LibroModel from "./libro/LibroModel";
---

<div class="book-container">
  <div class="book">
    <LibroModel client:load />  
  </div>
</div>

<style>
  .book-container {
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 800px;
    width: 100%;
    height: 100vh; /* Full viewport height */
  }

  .book {
    width: 100%;
    max-width: 1000px;
    height: 100%;
    position: relative;
  }

  @keyframes initAnimation {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(-20deg);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .book {
      width: 90vw;
    }
  }

  @media (max-width: 480px) {
    .book {
      width: 100vw;
    }
  }
</style>
